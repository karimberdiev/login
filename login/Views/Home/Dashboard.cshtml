@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-container">
    <!-- Welcome Section -->
    <div class="welcome-section">
        <h1>@ViewBag.WelcomeMessage</h1>
        <p>Hurmatli <strong>@ViewBag.Username</strong>, tizimga xush kelibsiz!</p>
    </div>

    <!-- User Info Cards -->
    <div class="info-grid">
        <div class="info-card">
            <div class="card-icon">üë§</div>
            <div class="card-content">
                <h3>Username</h3>
                <p>@ViewBag.Username</p>
            </div>
        </div>

        <div class="info-card">
            <div class="card-icon">üìß</div>
            <div class="card-content">
                <h3>Email</h3>
                <p>@ViewBag.Email</p>
            </div>
        </div>

        <div class="info-card">
            <div class="card-icon">
                @if (ViewBag.Role == "Admin")
                {
                    <span>üëë</span>
                }
                else
                {
                    <span>üë§</span>
                }
            </div>
            <div class="card-content">
                <h3>Role</h3>
                <p>@ViewBag.Role</p>
            </div>
        </div>

        <div class="info-card">
            <div class="card-icon">üìÖ</div>
            <div class="card-content">
                <h3>Ro'yxatdan O'tgan</h3>
                <p>@ViewBag.CreatedAt.ToString("dd.MM.yyyy")</p>
            </div>
        </div>
    </div>

    <!-- Admin Panel Access -->
    @if (ViewBag.CanAccessAdminPanel)
    {
        <div class="admin-access">
            <h2>üõ†Ô∏è Administrator Paneli</h2>
            <p>Sizda admin panelga kirish huquqi bor!</p>
            <div class="admin-buttons">
                <a asp-controller="Admin" asp-action="Dashboard" class="admin-btn">
                    <span class="icon">üìä</span>
                    <span class="text">Admin Dashboard</span>
                </a>
                <a asp-controller="Admin" asp-action="Users" class="admin-btn">
                    <span class="icon">üë•</span>
                    <span class="text">Foydalanuvchilarni Boshqarish</span>
                </a>
            </div>
        </div>
    }

    <!-- Session Info (from previous JWT lesson) -->
    <div class="session-panel">
        <h2>‚è∞ Session Ma'lumotlari</h2>
        <div class="session-info">
            <div class="session-item">
                <span class="label">Access Token:</span>
                <span class="value">‚úÖ Faol (15 daqiqa)</span>
            </div>
            <div class="session-item">
                <span class="label">Refresh Token:</span>
                <span class="value">‚úÖ Saqlangan (7 kun)</span>
            </div>
            <div class="session-item">
                <span class="label">Oxirgi Kirish:</span>
                <span class="value">
                    @if (ViewBag.LastLoginAt != null)
                    {
                        @ViewBag.LastLoginAt.ToString("dd.MM.yyyy HH:mm")
                    }
                    else
                    {
                        <span>Birinchi kirish</span>
                    }
                </span>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-container {
        padding: 30px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .welcome-section {
        background: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        text-align: center;
    }

        .welcome-section h1 {
            color: #667eea;
            font-size: 36px;
            margin-bottom: 15px;
        }

        .welcome-section p {
            color: #666;
            font-size: 18px;
        }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .info-card {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        gap: 20px;
        transition: transform 0.3s ease;
    }

        .info-card:hover {
            transform: translateY(-5px);
        }

    .card-icon {
        font-size: 48px;
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        background: rgba(102, 126, 234, 0.1);
    }

    .card-content h3 {
        color: #333;
        font-size: 14px;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .card-content p {
        color: #667eea;
        font-size: 20px;
        font-weight: 600;
        margin: 0;
    }

    .admin-access {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 40px;
        border-radius: 15px;
        color: white;
        margin-bottom: 30px;
    }

        .admin-access h2 {
            font-size: 28px;
            margin-bottom: 10px;
        }

        .admin-access p {
            font-size: 16px;
            margin-bottom: 25px;
            opacity: 0.9;
        }

    .admin-buttons {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 15px;
    }

    .admin-btn {
        background: rgba(255, 255, 255, 0.2);
        padding: 20px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        gap: 15px;
        text-decoration: none;
        color: white;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }

        .admin-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-3px);
        }

        .admin-btn .icon {
            font-size: 32px;
        }

        .admin-btn .text {
            font-size: 16px;
            font-weight: 600;
        }

    .session-panel {
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    }

        .session-panel h2 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

    .session-info {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .session-item {
        display: flex;
        justify-content: space-between;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 8px;
    }

        .session-item .label {
            color: #666;
            font-weight: 600;
        }

        .session-item .value {
            color: #333;
        }

    @@media (max-width: 768px) {
        .info-grid {
            grid-template-columns: 1fr;
        }

        .admin-buttons {
            grid-template-columns: 1fr;
        }
    }
</style>
