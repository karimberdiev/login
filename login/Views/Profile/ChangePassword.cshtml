@model login.Models.ChangePasswordModel
@{
    ViewData["Title"] = "Parolni O'zgartirish";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="change-password-container">
    <div class="page-header">
        <h1>🔒 Parolni O'zgartirish</h1>
        <p>Xavfsizlik uchun parolingizni vaqti-vaqti bilan yangilang</p>
    </div>

    <div class="form-card">
        <form asp-action="ChangePassword" asp-controller="Profile" method="post">
            @Html.AntiForgeryToken()

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(false)
                </div>
            }

            <div class="form-group">
                <label asp-for="CurrentPassword">
                    <span class="icon">🔑</span> Joriy Parol
                </label>
                <input asp-for="CurrentPassword"
                       type="password"
                       class="form-control"
                       placeholder="Hozirgi parolingizni kiriting"
                       autofocus />
                <span asp-validation-for="CurrentPassword" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword">
                    <span class="icon">🔒</span> Yangi Parol
                </label>
                <input asp-for="NewPassword"
                       type="password"
                       class="form-control"
                       placeholder="Yangi parolni kiriting (kamida 6 ta belgi)" />
                <span asp-validation-for="NewPassword" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmNewPassword">
                    <span class="icon">✅</span> Yangi Parolni Tasdiqlang
                </label>
                <input asp-for="ConfirmNewPassword"
                       type="password"
                       class="form-control"
                       placeholder="Yangi parolni qayta kiriting" />
                <span asp-validation-for="ConfirmNewPassword" class="field-validation-error"></span>
            </div>

            <div class="button-group">
                <button type="submit" class="btn btn-primary">
                    💾 Parolni O'zgartirish
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    ← Bekor Qilish
                </a>
            </div>
        </form>
    </div>

    <!-- Password Requirements -->
    <div class="password-tips">
        <h3>🛡️ Xavfsiz Parol Uchun Tavsiyalar</h3>
        <div class="tips-grid">
            <div class="tip-card">
                <span class="tip-icon">📏</span>
                <p><strong>Uzunlik:</strong> Kamida 6 ta belgi</p>
            </div>
            <div class="tip-card">
                <span class="tip-icon">🔤</span>
                <p><strong>Harflar:</strong> Katta va kichik harflardan foydalaning</p>
            </div>
            <div class="tip-card">
                <span class="tip-icon">🔢</span>
                <p><strong>Raqamlar:</strong> Raqamlar qo'shing</p>
            </div>
            <div class="tip-card">
                <span class="tip-icon">🔣</span>
                <p><strong>Belgilar:</strong> Maxsus belgilar ishlatish tavsiya etiladi</p>
            </div>
        </div>
    </div>

    <!-- Security Notice -->
    <div class="security-notice">
        <h3>⚠️ Xavfsizlik Eslatmasi</h3>
        <ul>
            <li>Parolingizni hech kimga bermang</li>
            <li>Parolni vaqti-vaqti bilan o'zgartiring</li>
            <li>Bir xil parolni turli saytlarda ishlatmang</li>
            <li>Parol o'zgargandan keyin qayta login qilishingiz shart emas</li>
        </ul>
    </div>
</div>

<style>
    .change-password-container {
        padding: 30px;
        max-width: 700px;
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: 30px;
    }

    .page-header h1 {
        color: #333;
        font-size: 36px;
        margin-bottom: 10px;
    }

    .page-header p {
        color: #666;
        font-size: 18px;
    }

    .form-card {
        background: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .alert-danger {
        background: #f8d7da;
        border: 2px solid #f5c6cb;
        color: #721c24;
        padding: 15px 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        display: block;
        color: #333;
        font-weight: 600;
        margin-bottom: 10px;
        font-size: 14px;
    }

    .form-group label .icon {
        font-size: 18px;
        margin-right: 5px;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s;
    }

    .form-control:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .field-validation-error {
        color: #dc3545;
        font-size: 12px;
        margin-top: 5px;
        display: block;
    }

    .button-group {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .btn {
        padding: 12px 30px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .btn-secondary {
        background: #6c757d;
        color: white;
    }

    .btn-secondary:hover {
        background: #5a6268;
    }

    .password-tips {
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .password-tips h3 {
        color: #333;
        font-size: 20px;
        margin-bottom: 20px;
    }

    .tips-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 15px;
    }

    .tip-card {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
    }

    .tip-icon {
        font-size: 32px;
        display: block;
        margin-bottom: 10px;
    }

    .tip-card p {
        color: #666;
        font-size: 13px;
        margin: 0;
        line-height: 1.5;
    }

    .tip-card strong {
        color: #333;
        display: block;
        margin-bottom: 5px;
    }

    .security-notice {
        background: #fff3cd;
        border: 2px solid #ffc107;
        padding: 25px;
        border-radius: 12px;
    }

    .security-notice h3 {
        color: #856404;
        font-size: 20px;
        margin-bottom: 15px;
    }

    .security-notice ul {
        margin: 0;
        padding-left: 25px;
    }

    .security-notice li {
        color: #856404;
        margin-bottom: 10px;
        line-height: 1.6;
    }

    @@media (max-width: 768px) {
        .tips-grid {
            grid-template-columns: 1fr;
        }

        .button-group {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }
    }
</style>
