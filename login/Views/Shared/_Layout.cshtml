<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Login System</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f5f7fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 0;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .navbar-container {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
        }

        .navbar-brand {
            font-size: 24px;
            font-weight: 700;
            text-decoration: none;
            color: white;
            padding: 20px 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .navbar-brand:hover {
            opacity: 0.9;
        }

        .navbar-menu {
            display: flex;
            list-style: none;
            gap: 5px;
            align-items: center;
        }

        .navbar-menu li {
            position: relative;
        }

        .navbar-menu a {
            color: white;
            text-decoration: none;
            padding: 20px 20px;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: background 0.3s ease;
            font-weight: 500;
        }

        .navbar-menu a:hover {
            background: rgba(255, 255, 255, 0.1);
        }

        .navbar-menu a.active {
            background: rgba(255, 255, 255, 0.2);
        }

        .navbar-user {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 20px 0;
        }

        .user-info {
            text-align: right;
        }

        .user-name {
            font-weight: 600;
            font-size: 14px;
        }

        .user-role {
            font-size: 12px;
            opacity: 0.8;
        }

        .btn-logout {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-logout:hover {
            background: rgba(255, 255, 255, 0.3);
        }

        /* Main Content */
        .main-content {
            flex: 1;
            padding: 0;
        }

        /* Footer */
        .footer {
            background: #2c3e50;
            color: white;
            text-align: center;
            padding: 20px;
            margin-top: auto;
        }

        .footer p {
            margin: 0;
            opacity: 0.8;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .navbar-container {
                flex-direction: column;
                gap: 15px;
            }

            .navbar-menu {
                flex-direction: column;
                width: 100%;
            }

            .navbar-menu a {
                width: 100%;
                justify-content: center;
            }

            .navbar-user {
                flex-direction: column;
                width: 100%;
                text-align: center;
            }

            .user-info {
                text-align: center;
            }
        }

        /* Admin Badge */
        .admin-badge {
            background: #ffc107;
            color: #333;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 700;
            margin-left: 8px;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="navbar-container">
            <a asp-controller="Home" asp-action="Dashboard" class="navbar-brand">
                🔐 Login System
            </a>

            <ul class="navbar-menu">
                <li>
                    <a asp-controller="Home" asp-action="Dashboard"
                       class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
                        🏠 Dashboard
                    </a>
                </li>

                <li>
                    <a asp-controller="Profile" asp-action="Index"
                       class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" ? "active" : "")">
                        👤 Profil
                    </a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a asp-controller="Admin" asp-action="Dashboard"
                           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
                            📊 Admin Panel
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="Users"
                           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "Users" ? "active" : "")">
                            👥 Userlar
                        </a>
                    </li>
                }
            </ul>

            <div class="navbar-user">
                <div class="user-info">
                    <div class="user-name">
                        👤 @User.Identity?.Name
                        @if (User.IsInRole("Admin"))
                        {
                            <span class="admin-badge">ADMIN</span>
                        }
                    </div>
                    <div class="user-role">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</div>
                </div>
                <form asp-controller="Auth" asp-action="Logout" method="post" style="margin: 0;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-logout">
                        🚪 Chiqish
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2025 Login System. Barcha huquqlar himoyalangan.</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
